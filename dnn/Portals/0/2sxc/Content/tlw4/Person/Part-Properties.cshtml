@inherits Custom.Hybrid.RazorTyped<Person>
@using AppCode.Data
@using AppCode.Services
@{
  // This is a partial template which is re-used in many other templates, so it's shared here
  // its shows the person data like name, position, contact data and description

  // The model is a Person object passed in by the caller
  var person = Model;
}
<div class="">
  <div class="text-lg/8 font-semibold tracking-light text-gray-900" itemprop="name">@person.FullName</div>
  @if (person.IsNotEmpty("Position"))
  {
    <div class="text-base/7 font-semibold text-gray-600" itemprop="jobTitle">@person.Position</div>
  }
  <div class="text-pretty font-normal text-gray-600 mt-4" itemprop="description">@person.Html("Description")</div>
</div>
<div class="flex flex-col gap-1">
  @if (person.IsNotEmpty("Mobile"))
  {
    <div itemprop="telephone">
      <i class="fa-solid fa-mobile text-center" aria-hidden="true"></i>
      <a href='tel:@person.Mobile.Replace(" ", "")' itemprop="telephone">
        @person.Mobile
      </a>
    </div>
  }
  @if (person.IsNotEmpty("Phone"))
  {
    <div itemprop="telephone">
      <i class="fa-solid fa-phone text-center" aria-hidden="true"></i>
      <a href='tel:@person.Phone.Replace(" ", "")' itemprop="telephone">
        @person.Phone
      </a>
    </div>
  }
   @if (person.IsNotEmpty("Email"))
   {
    <div itemprop="email">
      <i class="fa-solid fa-envelope text-center" aria-hidden="true"></i>
      @(GetService<ProtectMailService>().TryToEncrypt(person.Email))
    </div>
  }
</div>
