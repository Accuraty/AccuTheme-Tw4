@* View: Large (full-width) with icon-buttons *@

@inherits AppCode.Razor.LinksRazor
@using AppCode.Data

@{
  var link = MyLink;
  var headingTag = As<TextMediaPresentation>(link.Presentation).HeadingType;
}

<div class="px-6 py-24 lg:px-8 lg:py-32" @Kit.Toolbar.Default(link)>
  <div class="mx-auto max-w-2xl text-center">
  
    @if (headingTag != "hide")
    {
      @Kit.HtmlTags.Custom(headingTag).Wrap(
        link.Title
      )

      <p class="mx-auto max-w-xl text-lg/8 text-pretty mb-8">@link.Description</p>
    }

    @if (link.IsNotEmpty("Link"))
    {
      <a href='@link.Link' target='@link.WindowAuto' title="@link.Title" class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
        <i class='fa-solid @link.IconAuto' aria-hidden="true"></i>
        <span>@link.LinkText</span>
      </a>
    }
  </div>
</div>

