@* View: Icon on the side, max. 3 in a row *@

@inherits AppCode.Razor.LinksRazor
@using AppCode.Data

<div class="mx-auto max-w-7xl grid grid-cols-1 gap-6 px-4 mt-24 lg:grid-cols-3 lg:gap-8 lg:mt-32">
  @foreach (var link in MyLinks)
  {
    <div class="col-span-1" @Kit.Toolbar.Default(link)>
      <i class='text-blue-500 fa-solid fa-2xl @link.IconAuto' aria-hidden="true"></i>
      <h4>@link.Title</h4>
      @link.DescriptionHtml(true)

      <div class="mt-3">
        @if (link.IsNotEmpty("Link"))
        {
          <a 
            href='@link.Link'
            target='@link.WindowAuto'
            title="@link.Title"
            class="group block items-center gap-2 text-blue-500 hover:text-blue-700"
          >
            @link.Get("LinkText") 
            <i class="fa-solid fa-chevron-right fa-xs align-middle transition-transform duration-200 group-hover:translate-x-1" aria-hidden="true"></i>
          </a>
        }
      </div>
    </div>
  }
</div>

