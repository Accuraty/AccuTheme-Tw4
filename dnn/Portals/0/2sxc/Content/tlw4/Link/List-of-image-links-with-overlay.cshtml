@inherits AppCode.Razor.LinksRazor
@using AppCode.Data

<div class="mx-auto max-w-7xl grid grid-cols-1 gap-6 px-4 mt-24 lg:grid-cols-3 lg:gap-8 lg:mt-32">
  @foreach (var link in MyLinks)
  {
    <div class="group relative col-span-1 overflow-hidden" @Kit.Toolbar.Default(link)>

      @if (link.IsNotEmpty("Image"))
      {
        <figure class="group w-full object-cover transition-transform duration-200 m-0 hover:scale-103">
          @link.Picture("Image", settings: "Content", factor: "1/3", imgAltFallback: link.Title)

          @* Overlay *@
          <div class="absolute inset-0 flex flex-col items-start text-gray-100 bg-black/50 transition group-hover:bg-black/70"></div>
          
          @* Content *@
          <div class="absolute inset-0 flex flex-col justify-end p-6 text-white">

            <h4 class="text-white">@link.Title</h4>
            @link.DescriptionHtml(false)

            @if (link.IsNotEmpty("Link"))
            {
              <div class="mt-5">
                <a 
                  href='@link.Link'
                  target='@link.WindowAuto'
                  title="@link.Title"
                  class="stretched-link rounded-md bg-blue-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-xs hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
                >
                  @link.Get("LinkText") 
                  <i class="fa-solid fa-chevron-right fa-xs align-middle transition-transform duration-200 group-hover:translate-x-1" aria-hidden="true"></i>
                </a>
              </div>
            }
          </div>
        </figure>
      }
      else
      {
        <div class="flex items-center justify-center bg-blue-300 h-56 w-full text-blue-800 transition-transform duration-200 m-0 hover:scale-110">Placeholder Image</div>
      } 
    </div>
  }
</div>

